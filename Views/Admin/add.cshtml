@model EAD_project_4.Models.Recipe
@{
    Layout = "~/Views/Shared/adminLayout.cshtml";
}

<body id="page9">
<!--==============================header=================================-->
<header>
  <div class="row-top">
    <div class="main">
      <div class="wrapper">
        <h1><a href="/Admin/adminStart">Cook Book</a></h1>
        <nav>
          <ul class="menu">
            <li><a href="/Admin/adminStart">Home</a></li>
            <li><a class="active" href="/User/add">Add</a></li>
              <li><a href="/Admin/viewRec">View</a></li>
             <li><a href="/Admin/search">Search </a></li>
            <li><a href="/Admin/delete">Delete </a></li>
            <li><a href="/Admin/update">Update</a></li>
             <li><a href="/Admin/viewSuggestions">Suggestions</a></li>
              <li><a href="/Admin/addAdmin">Add Admin</a></li>
               <li><a href="/Admin/logout">Logout</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
  <div class="row-bot">
    <div class="row-bot-bg">
      <div class="main">
        <h2>Tasty Recipes <span>for any Occasion</span></h2>
      </div>
    </div>
  </div>
</header>
<!--==============================content================================-->

<section id="content">
  <div class="main">
    <div class="wrapper">

      <article class="col-2">
        <h3 class="p1">Add Recipe</h3>
          @using (Html.BeginForm("addRec", "Admin", FormMethod.Post , new { id = "contact-form", enctype="multipart/form-data"} ))
        {
          <fieldset>
              @Html.AntiForgeryToken()
              @Html.ValidationSummary(true)

            <label><span class="text-form">Category:</span>
              @Html.TextBoxFor(m=>m.Category)
              &nbsp&nbsp&nbsp&nbsp <span style="color:red">@Html.ValidationMessageFor(model => model.Category) </span>

            </label>
            <label><span class="text-form">Recipe's Name:</span>
              @Html.TextBoxFor(m=>m.Name)
              &nbsp&nbsp&nbsp&nbsp <span style="color:red">@Html.ValidationMessageFor(model => model.Name)</span>
            </label>
                  <label><span class="text-form">Ingredients:</span>
                  @Html.TextAreaFor(model => model.Ingredients, new {@cols="50" , @rows="6" })
              &nbsp&nbsp&nbsp&nbsp <span style="color:red">@Html.ValidationMessageFor(model => model.Ingredients)</span>
                </label>
              <br />
               <label><span class="text-form">Recipe:</span>
                  @Html.TextAreaFor(model => model.Recipe1, new {@cols="50" , @rows="6" })
              &nbsp&nbsp&nbsp&nbsp <span style="color:red">@Html.ValidationMessageFor(model => model.Recipe1)</span>
                </label>
                 <br />
              <label><span class="text-form">Upload Picture:</span>
                  <input type="file" name="image" /> 
              </label>
              @Html.ValidationMessageFor(model => model.Image)
              <br/>
            <div class="wrapper">
              <div class="extra-wrap">
               <div style="text-align:center"><input type="submit" style="width:145px; font-size:large ; height:30px ; border-style:groove; border-width:thin; border-color:black; border-radius:5px; background-image:url(../images/add.PNG);display:inline-block;text-indent: -9000px; text-transform: capitalize;"/></div>
              </div>
            </div>
          </fieldset>
          }
      </article>
    </div>
  </div>
</section>

<!--==============================footer=================================-->
    <script type="text/javascript">Cufon.now();</script>
</body>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}